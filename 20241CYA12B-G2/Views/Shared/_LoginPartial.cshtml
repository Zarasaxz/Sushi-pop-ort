@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
        <a class="nav-link-custom" asp-area="Identity" asp-controller="CarritoItems" asp-action="Index" asp-route-category="CarritoItems">
            <img src="~/images/basket3-fill.svg" alt="Carrito" height="25" />

        </a>

}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Login">
                <img src="~/images/person-circle.svg" alt="Usuario" height="25" />
            </a>
    </li>
    
}
</ul>
